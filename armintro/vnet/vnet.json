{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vnetName": {
      "type": "string",
      "defaultValue": "VNet1",
      "metadata": {
        "description": "VNet name"
      }
    },
    "vnetCIDRPrefix": {
      "type": "string",
      "defaultValue": "10.0",
      "metadata": {
        "description": "Address prefix"
      }
    },
    "publicSubnet0": {
      "type": "string",
      "defaultValue": "10.0.10.0/24",
      "metadata": {
        "description": "Public Subnet 0"
      }
    },
    "privateSubnet0": {
      "type": "string",
      "defaultValue": "10.0.20.0/24",
      "metadata": {
        "description": "Private Subnet 0"
      }
    },
    "dbSubnet0": {
      "type": "string",
      "defaultValue": "10.0.30.0/24",
      "metadata": {
        "description": "DB Subnet 0"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2020-05-01",
      "name": "[parameters('vnetName')]",
      "location": "[parameters('location')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            //            "[concat(parameters('vnetCIDRPrefix'), '.0.0/16')]"
            "10.0.0.0/16"
          ]
        }
      },
      "resources": [
        {
          "type": "subnets",
          "apiVersion": "2020-05-01",
          "location": "[parameters('location')]",
          "name": "publicSubnet0",
          "dependsOn": [
            "[parameters('vnetName')]"
          ],
          "properties": {
            "addressPrefix": "[parameters('publicSubnet0')]"
          }
        },
        {
          "type": "subnets",
          "apiVersion": "2020-05-01",
          "location": "[parameters('location')]",
          "name": "privateSubnet0",
          "dependsOn": [
            "[parameters('vnetName')]"
          ],
          "properties": {
            "addressPrefix": "[parameters('privateSubnet0')]"
          }
        },
        {
          "type": "subnets",
          "apiVersion": "2020-05-01",
          "location": "[parameters('location')]",
          "name": "dbSubnet0",
          "dependsOn": [
            "[parameters('vnetName')]"
          ],
          "properties": {
            "addressPrefix": "[parameters('dbSubnet0')]"
          }
        },
        {
          "name": "bastionNetworkSecurityGroup",
          "type": "Microsoft.Network/networkSecurityGroups",
          "apiVersion": "2019-11-01",
          "location": "[resourceGroup().location]",
          "dependsOn": [
            "[parameters('vnetName')]"
          ],
          "properties": {
            "securityRules": [
              {
                "name": "sshNSGRule",
                "properties": {
                  "description": "allow all inbound on port 22 (SSH)",
                  "protocol": "Tcp",
                  "sourcePortRange": "*",
                  "destinationPortRange": "22",
                  "sourceAddressPrefix": "*",
                  "destinationAddressPrefix": "*",
                  "access": "Allow",
                  "priority": 100,
                  "direction": "Inbound"
                }
              },
              {
                "name": "rdpNSGRule",
                "properties": {
                  "description": "allow all inbound on port 389 (RDP)",
                  "protocol": "Tcp",
                  "sourcePortRange": "*",
                  "destinationPortRange": "389",
                  "sourceAddressPrefix": "*",
                  "destinationAddressPrefix": "*",
                  "access": "Allow",
                  "priority": 110,
                  "direction": "Inbound"
                }
              }
            ]
          }
        }
      ]
    }
  ]
}